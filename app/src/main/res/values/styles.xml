<resources>

    <style name="ThemeGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkGreen</item>
        <item name="android:textColor">@color/colorTextGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="android:colorForeground">@color/colorPrimaryDarkGreen</item>
    </style>

    <style name="ThemeBlack" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkBlack</item>
        <item name="android:textColor">@color/colorAccentBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="android:colorForeground">@color/colorPrimaryDarkBlack</item>
    </style>

    <style name="ThemeBlue" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkBlue</item>
        <item name="android:textColor">@color/colorTextBlue</item>
        <item name="android:colorBackground">@color/colorPrimaryBlue</item>>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="android:colorForeground">@color/colorPrimaryDarkBlue</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Margin1" parent="AppTheme">
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="Margin3" parent="AppTheme">
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="Margin10" parent="AppTheme">
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
